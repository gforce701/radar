<% bookmarklet_js = "javascript:(function(){document.body.appendChild(document.createElement('script')).src='#{inject_url()}';})();" %>

<div class="klax-topper">
  <div class="container">
    <div class="jumbotron">
      <% if @current_user.pages.empty? %>
        <h4 class="klax-no-border" style="padding-top: 0;">Watch Your First Item</h4>
      <% else %>
        <h4 class="klax-no-border" style="padding-top: 0;">Bookmarklet</h4>
      <% end %>
      <p>To watch a web page, drag the “Add to Blackhole” button below to your bookmark bar. <!-- To watch a file such as an image or document, <a href="#">enter it manually</a> instead.--></p>
      <a class="btn btn-sm" href="<%= bookmarklet_js %>" role="button">Add to Blackhole</a>
    </div>
  </div>
</div>


